<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.example.dao.MenuDao">

    <resultMap id="baseMap" type="com.boot.example.entity.Menu">
        <id column="id" property="id"/>
        <collection property="subMenuList" select="getSubMenuList" column="id"/>
    </resultMap>

    <select id="findAllMenu" resultMap="baseMap">
        SELECT id,menuName,menuIcon FROM menu
    </select>

    <select id="getSubMenuList" resultType="com.boot.example.entity.SubMenu">
        SELECT id,menuId,subMenuName,subMenuIcon,path FROM subMenu WHERE menuId = #{id}
    </select>

</mapper>